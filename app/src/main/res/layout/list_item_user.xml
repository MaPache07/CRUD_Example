<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card"
    app:cardCornerRadius="@dimen/radio_card"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text"
            android:layout_below="@id/username_text" />
        <TextView
            android:id="@+id/gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text"
            android:layout_below="@id/mail_text" />
        <Button
            android:id="@+id/action_update"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:text="update"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/gender_text"
            android:textSize="@dimen/action_text"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/color_white"/>
        <Button
            android:id="@+id/action_delete"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:text="delete"
            android:layout_alignBottom="@id/gender_text"
            android:layout_toLeftOf="@id/action_update"
            android:textSize="@dimen/action_text"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/color_white"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>